.searchLetter {
  position: fixed;
  right: 0;
  width: 50rpx;
  text-align: center;
  justify-content: center;
  display: flex;
  flex-direction: column;
  color: #666;
  z-index: 1;
}

.searchLetter view {
  margin-top: 14rpx;
}

.touchClass {
  background-color: #fff;
  color: #fff;
  padding-top: 46rpx;
}

.showSlectedLetter {
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 50%;
  left: 50%;
  margin: -100rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  font-size: 52rpx;
  z-index: 1;
}

.selection {
  display: flex;
  width: 100%;
  flex-direction: column;
  margin-top: 10rpx;
}

.item_letter {
  display: flex;
  background-color: #f5f5f5;
  height: 40rpx;
  padding-left: 34rpx;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.item_Car {
  display: flex;
  background-color: #fff;
  height: 100rpx;
  padding-left: 34rpx;
  align-items: center;
  border-bottom: 1rpx solid #ededed;
  font-size: 24rpx;
  color: #666;
}

.hotCar-common {
  font-size: 24rpx;
  color: #666;
  padding: 0 0 0 30rpx;
  display: flex;
  background: #f5f5f5;
  height: 40rpx;
  align-items: center;
}

.thishotText {
  color: #8A8A88;
  font-size: 26rpx;
  margin: 0 !important;
}

.slectCar {
  border-color: #2ab4ff !important;
}

.slectCar view {
  color: #2ab4ff !important;
}

.weui-grid {
  position: relative;
  float: left;
  padding: 10rpx 0;
  width: 15.4%;
  box-sizing: border-box;
  border-radius: 8rpx;
  margin: 10rpx 12rpx;
  text-align: center;
}

.weui-grid__label {
  display: block;
  color: #333;
  font-size: 24rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.weui-grid_image{
    width:60rpx;
    height:60rpx;
}
.item_Car .weui-grid_image{
    margin-right:30rpx;
}
#rightShow{
    width:66%;
    background:#fff;
    transition: right 0.5s ease-in-out;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    position: absolute;
    top:0;
    z-index: 11;
}
.headline{
    padding-left:20rpx;
    font-size: 24rpx;
    background: #EFEFF4;
    height:46rpx;
    line-height: 46rpx;
    color:#8A8A88;
}
.head{
    font-size: 26rpx;
    padding:20rpx;
    border-bottom:2rpx solid #F1F1F1;
}